HOST=$PS5_HOST
PORT=$PS5_PORT

PAYLOAD=""
INTERACTIVE=""


show_help() {
    cat <<EOF
Usage: $(basename "$0") -h HOST [-p PORT] [-i] PAYLOAD_PATH

Options:
  -h HOST        Set the host address (defaults to \$PS5_HOST)
  -p PORT        Set the port (defaults to \$PS5_PORT if set, else 9021)
  -i             Enable interactive mode (append /dev/stdin to payload)
  -H, --help     Show this help message and exit

Arguments:
  PAYLOAD_PATH   Path to the payload
EOF
}

if [ -z "$PORT" ]; then
    PORT=9021
fi

for arg in "$@"; do
    case "$arg" in
        --help)
            show_help
            exit 0
            ;;
    esac
done


while getopts "h:p:i" opt; do
    case ${opt} in
	h) HOST=$OPTARG;;
	p) PORT=$OPTARG;;
	i) INTERACTIVE="1";;
    esac
done
shift $((OPTIND -1))


if [[ -z $HOST || -z $PORT || -z $1 ]]; then
    echo "Usage: $(basename $0) -h HOST [-p PORT] [-i] PAYLOAD_PATH" >&2
    exit 1
fi


if [[ -z $INTERACTIVE ]]; then
    socat -t 9999999 - TCP:$HOST:$PORT < $1
else
    { cat $1 && cat /dev/stdin; } | socat - TCP:$HOST:$PORT
fi
